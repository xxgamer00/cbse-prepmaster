{
  "apps": [
    {
      "appId": "cbse-prepmaster",
      "root": ".",
      "srcDir": "client",
      "dependencyInstallCommand": "npm install",
      "webBuildCommand": "cd client && npm run build",
      "androidBuildConfig": {
        "platform": "android",
        "buildType": "debug",
        "packageId": "com.cbse.prepmaster",
        "versionName": "1.0.0",
        "versionCode": 1,
        "minSdkVersion": 21,
        "targetSdkVersion": 33,
        "gradleVersion": "7.3.1"
      },
      "ios": {
        "platform": "ios",
        "buildType": "debug"
      },
      "hooks": {
        "preInstall": "cd client",
        "preBuild": "cd client"
      },
      "environments": {
        "production": {
          "env": {
            "REACT_APP_API_URL": "https://api.cbseprepmaster.com"
          }
        }
      }
    }
  ]
}
